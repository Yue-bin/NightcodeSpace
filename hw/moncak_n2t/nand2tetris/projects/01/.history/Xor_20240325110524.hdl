/**
 * Exclusive-or gate:
 * out = (not(a) and b) or (a and not(b))
 */
CHIP Xor {
    IN a, b;
    OUT out;

    PARTS:
        Not(in=a, out=notA);  
        Not(in=b, out=notB);
        And(a=a, b=notAorB, out=notAorBandA);
        And(a=b, b=notAorB, out=notAorBandB);
        Or(a=notAorBandA, b=notAorBandB, out=out);
}