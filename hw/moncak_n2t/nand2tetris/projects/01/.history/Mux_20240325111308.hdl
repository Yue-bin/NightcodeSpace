/** 
 * Multiplexor:
 * if (sel == 0) out = a, else out = b
 */
CHIP Mux {
    IN a, b, sel;
    OUT out;

    PARTS:
        Not(in=sel, out=nsel);
        And(a=a, b=nsel, out=and1);
        And(a=b, b=sel, out=and2);
        Or(a=and1, b=and2, out=out);
}   